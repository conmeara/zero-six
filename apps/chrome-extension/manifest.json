{
  "manifest_version": 3,
  "name": "Zero Six",
  "description": "Hide distracting feeds, recommendations, and notifications across major social platforms.",
  "version": "0.1.0",
  "key": "",
  "permissions": ["storage", "nativeMessaging"],
  "background": {
    "service_worker": "src/background/serviceWorker.js"
  },
  "options_page": "src/options/options.html",
  "action": {
    "default_title": "Zero Six",
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://*.facebook.com/*"],
      "run_at": "document_idle",
      "js": ["src/common/defaultSettings.js", "src/common/settings.js", "src/common/domUtils.js", "src/contentScripts/facebook.js"]
    },
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "run_at": "document_idle",
      "js": ["src/common/defaultSettings.js", "src/common/settings.js", "src/common/domUtils.js", "src/contentScripts/youtube.js"]
    },
    {
      "matches": ["https://twitter.com/*", "https://*.twitter.com/*", "https://x.com/*", "https://*.x.com/*"],
      "run_at": "document_idle",
      "js": ["src/common/defaultSettings.js", "src/common/settings.js", "src/common/domUtils.js", "src/contentScripts/twitter.js"]
    },
    {
      "matches": ["https://www.reddit.com/*", "https://old.reddit.com/*"],
      "run_at": "document_idle",
      "js": ["src/common/defaultSettings.js", "src/common/settings.js", "src/common/domUtils.js", "src/contentScripts/reddit.js"]
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "run_at": "document_idle",
      "js": ["src/common/defaultSettings.js", "src/common/settings.js", "src/common/domUtils.js", "src/contentScripts/linkedin.js"]
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "run_at": "document_idle",
      "js": ["src/common/defaultSettings.js", "src/common/settings.js", "src/common/domUtils.js", "src/contentScripts/instagram.js"]
    }
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://*.facebook.com/*",
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://twitter.com/*",
    "https://*.twitter.com/*",
    "https://x.com/*",
    "https://*.x.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://www.linkedin.com/*",
    "https://www.instagram.com/*"
  ]
}
